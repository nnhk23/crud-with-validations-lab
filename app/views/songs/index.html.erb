<h1>Song list</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Release year</th>
            <th>Artist name</th>
            <th>Genre</th>
        </tr>
    </thead>


    <tbody>
        <% @songs.each do |song|%>
            <tr>
                <td>
                <%= song.title %>
                </td>

                <td>
                <%= song.release_year%>
                </td>

                <td>
                <%= song.artist_name%>
                </td>

                <td>
                <%= song.genre%>
                </td>

                <td>
                <%= link_to "Delete", song, method: :delete, data: {confirm:"Really?"}%>
                <%= link_to "Edit", edit_song_path(song)%>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
